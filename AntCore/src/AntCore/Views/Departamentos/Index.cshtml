@model List<Modelo.Entity.Departamento>
@{
    ViewBag.Title = "Lista de Departamentos";
}

<h2>Departamento</h2>
<hr />

<p>
    <a id="btbNuevoDep" class="btn btn-primary btn-lg" data-target="#myModal" data-toggle="modal">Crear Nuevo</a>

</p>
@*<div class="well well-sm"><a class="btn btn-primary" href="~/Cliente/Create">Nuevo</a></div>table table-hover table-striped *@
<table class="table table-striped table-bordered table-hover">
    <thead>

        <tr class="bg-primary">

            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PDCOD)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PD000)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PD001)</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var objDep in Model)
        {
            <tr>

                <td>@objDep.PDCOD</td>
                <td>@objDep.PD000</td>
                <td>@objDep.PD001</td>
                <td>

                    <a class="btnEditarDep btn" data-id="@objDep.PDCOD" href="#myModal" data-toggle="modal"><span class="glyphicon glyphicon-edit"></span></a>
                    <a class="btnEliminar btn"  asp-action="Delete"  asp-route-id="@objDep.PDCOD" onclick="return confirm('Seguro quiere eliminar?');"><span class="glyphicon glyphicon-trash"></span></a>

                    
                </td>
            </tr>
        }
    </tbody>

</table>


<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" style="z-index:100" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title" id="myModalLabel">Departamento</h2>
            </div>
            <div class="modal-body">
                <div id="modal-content">
                    Cargando...
                </div>

            </div>

        </div>
    </div>
</div>


