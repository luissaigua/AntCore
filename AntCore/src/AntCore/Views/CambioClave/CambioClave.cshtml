
@model Modelo.Entity.Usuarios


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>  Cambio de contraseña...</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-3">
                
             
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <div ID="panelMensajeCC1" Class="active smaller"  style="display:none" >
                        <div id="divMensajeCC1" class="alert alert-block alert-success fade in smaller">
                            <strong><label ID="mensajeStrongLabelCC1"> </label></strong>
                            <label ID="mensajeLabelCC1"></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    Contraseña actual *
                    @Html.TextBox("tb_contrasenia_actual", null, new { @class = "form-control", @placeholder = "Contraseña actual", @title = "Tooltip on top" , type = "password" })
                </div>
                <div class="form-group">
                    Nueva contraseña *
                    @Html.TextBox("tb_nueva_contrasenia", null, new { @class = "form-control", @placeholder = "Nueva contraseña", @title = "Tooltip on top", type = "password" })
                </div>
                <div class="form-group">
                    Confirmar nueva contraseña *
                    @Html.TextBox("tb_confirmar_nueva_contrasenia", null, new { @class = "form-control", @placeholder = "Confirmar contraseña", @title = "Tooltip on top" , type = "password" })
                </div>
                <div class="form-group">
                    Campos obligatorios(*)
                    <br />  
                    <input id="btnModificarCcontrasenia" type="submit" value="Guardar" class="btn btn-primary active" />
                </div>
                <div class="form-group">
                    <div ID="panelMensajeCC" Class="active smaller" style="display:none">
                        <div id="divMensajeCC" class="alert alert-block alert-danger fade in smaller">
                            <strong><label ID="mensajeStrongLabelCC"> </label></strong>
                            <label ID="mensajeLabelCC"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="panel-footer">
        ........
    </div>
</div>